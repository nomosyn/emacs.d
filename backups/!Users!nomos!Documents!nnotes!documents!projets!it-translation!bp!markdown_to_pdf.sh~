#!/bin/bash



# State

function exist { hash $1 2>/dev/null || { echo >&2 "Cannot find ${1}.  Aborting."; exit 1; } }
input="${1}"; exist "${target}";
converter="pandoc"; exist "${converter}";
target_format="pdf";
output_dir="./bp_to_pdf"; exist "${output_dir}"
style_reference="../bp-template.docx"; exist "${style_reference}"
output="${output_dir}/${input}.pdf"; # Will be overwritten by "Next" procedure



# Next

"${converter}" \
    --from=markdown+header_attributes+yaml_metadata_block+pipe_tables \
    --to="${target_format}" \
    --number-sections \
    --smart \
    --normalize \
    --table-of-content \
    --output "${output}" \
    "${input}";
