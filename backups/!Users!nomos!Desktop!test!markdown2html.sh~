#!/bin/bash

function exist {
    hash $1 2>/dev/null || { echo >&2 "Cannot find ${1}.  Aborting."; exit 1; }
}

converter="pandoc"; exist ${converter}
input="${1}"; exist ${target}
output=${input}.html

"${converter}" --from=markdown \
               --to=html5 \
               --smart \
               --normalize \
               --table-of-content \
               --standalone -o "${output}" "${input}";

open "${output}"
