USER_LOCAL_BIN="/usr/local/bin"
USER_TOOLS="~/Documents/tools"

# Make users,heroku bin available to terminal
export PATH="${USER_LOCAL_BIN}:/usr/local/heroku/bin:${PATH}"

# Configure nix
source "${HOME}/.nix-profile/etc/profile.d/nix.sh"
nixpkgs-path="${USER_TOOLS}/nixpkgs"
export NIX_PATH="${nixpkgs-path}:nixpkgs=${nixpkgs-path}"

# Configure Aspell
export ASPELL_CONF="dict-dir ${HOME}/.nix-profile/lib/aspell"
